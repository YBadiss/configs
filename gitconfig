[user]
    name = Yacine Badiss
    email = ybadiss@bloomberg.net
[color]
    ui = true
[core]
    excludesfile = /home/ybadiss/.gitignore_global
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lga = !"git lg --all"
    lgs = !"git lg -10"
    lgas = !"git lga -10"
    st = status -uno
    stu = status -u
    branches = !~/bin/git-branches.sh
    sub = submodule update --init --recursive
    addnw = !"git diff -w --no-color | git apply --cached --ignore-whitespace"
[merge]
    tool = meld
[http]
    proxy = https://devproxy.bloomberg.com:82
    sslverify = false
[credential]
    helper = cache --timeout=3600
[push]
    default = current